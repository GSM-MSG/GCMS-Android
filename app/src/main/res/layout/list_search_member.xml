<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="list"
            type="com.msg.gcms.data.remote.dto.datasource.user.response.UserData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_black"
        android:clickable="false">

        <ImageView
            android:id="@+id/userProfileIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_user_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/notosans"
            android:text="@string/example_text"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/userProfileIv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userInfoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans"
            android:text="@string/example_text"
            android:textColor="@color/gray_5"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/userNameTv"
            app:layout_constraintTop_toBottomOf="@+id/userNameTv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
