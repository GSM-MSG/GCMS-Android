<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_black">

    <TextView
        android:id="@+id/club_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="전공동아리"
        android:textColor="@color/white"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/my_club_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_club_img"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/club_name_txt"
        app:layout_constraintBottom_toTopOf="@id/my_club_txt"/>

    <TextView
        android:id="@+id/my_club_txt"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/bg_club_txt"
        android:text="동아리 이름"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/my_club_img"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>